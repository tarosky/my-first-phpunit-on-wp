{
    "name": "tarosky/my-first-phpunit-on-wp",
    "description": "WordPressでユニットテストを学ぶためのサンプルプラグイン",
    "type": "wordpress-plugin",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Tarosky",
            "email": "info@tarosky.co.jp",
            "homepage": "https://tarosky.co.jp/"
        }
    ],
    "keywords": [
        "wordpress",
        "phpunit",
        "unit-testing",
        "learning",
        "tutorial"
    ],
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "brain/monkey": "^2.6",
        "mockery/mockery": "^1.6",
        "phpunit/phpunit": "^9.6",
        "wp-coding-standards/wpcs": "^3.2",
        "yoast/phpunit-polyfills": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "MyFirstPHPUnitOnWP\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MyFirstPHPUnitOnWP\\Tests\\": "tests/src/"
        }
    },
    "scripts": {
        "install-wp-tests": [
            "bash bin/install-wp-tests.sh wordpress_test root '' localhost latest"
        ],
        "test": [
            "phpunit"
        ],
        "test-coverage": [
            "phpunit --coverage-html coverage"
        ],
        "lint": "phpcs --standard=phpcs.ruleset.xml $(find ./ -name '*.php')",
        "fix": "phpcbf --standard=phpcs.ruleset.xml $(find ./ -name '*.php')"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
